<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_denuncia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <!--Includes Reutilizables-->
        <include
            android:id="@+id/include_toolbar_denuncia"
            layout="@layout/widget_toolbar_vermas" />
        <!--Includes Reutilizables-->


        <TextView
            android:id="@+id/txt_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/titulo_contenedor"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/titulo_contenido" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/marginLeft_5dp"
            android:layout_marginRight="@dimen/marginRight_5dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/cardCornerRadius"
            app:cardElevation="@dimen/cardElevation"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/marginTop_10dp"
                android:orientation="vertical"
                android:paddingBottom="@dimen/layout_margin_10dp">

                <!--Includes Reutilizables-->
                <include
                    android:id="@+id/include_volumen_residuo"
                    layout="@layout/widget_cardview_summary" />

                <include
                    android:id="@+id/include_tipo_residuo"
                    layout="@layout/widget_cardview_summary" />

                <include
                    android:id="@+id/include_informacion_adicional"
                    layout="@layout/widget_cardview_summary" />

                <include
                    android:id="@+id/include_tipo_denuncia"
                    layout="@layout/widget_cardview_radio" />
                <!--Includes Reutilizables-->

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Includes Reutilizables-->
        <include
            android:id="@+id/include_terminos_condiciones_denuncia"
            layout="@layout/widget_checkbox_text" />

        <!--Includes Reutilizables-->

        <LinearLayout
            android:id="@+id/acciones_denuncia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginLeft_10dp"
            android:layout_marginTop="@dimen/marginLeft_20dp"
            android:layout_marginRight="@dimen/marginRight_10dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_limpiar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:enabled="false"
                android:text="@string/limpiar"
                android:textAllCaps="false"
                android:textSize="@dimen/titulo_contenedor" />

            <Button
                android:id="@+id/btn_denunciar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimaryDark"
                android:enabled="false"
                android:text="@string/denunciar"
                android:textAllCaps="false"
                android:textSize="@dimen/titulo_contenedor" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>