<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_denuncia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:id="@+id/toolbar_form_volumen"
                android:layout_width="match_parent"
                android:layout_height="@dimen/imageView_icono"
                android:background="@color/colorAccent">

                <TextView
                    android:id="@+id/txt_title_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/titulo_principal"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ver_mas"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/img_atras"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Ver Mas"
                        android:textColor="@color/white"
                        android:textSize="@dimen/titulo_contenido"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/imageView_iconos_contenedor"
                        android:layout_height="@dimen/imageView_iconos_contenedor"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/ic_ir"
                        android:backgroundTint="@color/white" />

                </LinearLayout>

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_context"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/contenido"
                    android:textColor="@color/black"
                    android:textSize="@dimen/titulo_contenido" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/marginLeft_5dp"
                    android:layout_marginRight="@dimen/marginRight_5dp"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/cardCornerRadius"
                    app:cardElevation="@dimen/cardElevation"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/marginTop_10dp"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/layout_margin_10dp">

                        <!--Includes Reutilizables-->
                        <include
                            android:id="@+id/include_volumen_residuo"
                            layout="@layout/component_cardview_summary" />

                        <include
                            android:id="@+id/include_tipo_residuo"
                            layout="@layout/component_cardview_summary" />

                        <include
                            android:id="@+id/include_informacion_adicional"
                            layout="@layout/component_cardview_summary" />

                        <include
                            android:id="@+id/include_tipo_denuncia"
                            layout="@layout/component_cardview_radio" />
                        <!--Includes Reutilizables-->

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/layout_margin_5dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbx_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/titulo_contenido" />

                    <TextView
                        android:id="@+id/txt_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/marginLeft_5dp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/layout_margin_15dp"
                    android:paddingRight="@dimen/layout_margin_15dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                </LinearLayout>

                <!--Includes Reutilizables-->
                <include
                    android:id="@+id/include_login_google"
                    layout="@layout/component_login_google" />
                <!--Includes Reutilizables-->

                <LinearLayout
                    android:id="@+id/acciones_denuncia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginLeft_10dp"
                    android:layout_marginTop="@dimen/marginLeft_20dp"
                    android:layout_marginRight="@dimen/marginRight_10dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btn_limpiar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:backgroundTint="@color/white"
                        android:enabled="false"
                        android:text="@string/limpiar"
                        android:textAllCaps="false"
                        android:textSize="@dimen/titulo_contenedor" />

                    <Button
                        android:id="@+id/btn_denunciar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:enabled="false"
                        android:text="@string/denunciar"
                        android:textAllCaps="false"
                        android:textSize="@dimen/titulo_contenedor" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>